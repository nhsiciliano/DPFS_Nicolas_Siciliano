<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { title: 'Crear Producto' , css: 'auth' }) %>

    <body>
        <%- include('../partials/header') %>

            <main class="container auth-container">
                <div class="auth-card" style="max-width: 600px;">
                    <h1>Crear Producto</h1>
                    <p class="auth-subtitle">Agrega un nuevo producto al catálogo</p>

                    <form action="/products" method="POST" class="auth-form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Nombre del Producto</label>
                            <input type="text" id="name" name="name" placeholder="Ej. Alimento Premium"
                                value="<%= locals.oldData ? oldData.name : '' %>">
                            <% if (locals.errors && errors.name) { %>
                                <div class="text-danger">
                                    <%= errors.name.msg %>
                                </div>
                                <% } %>
                        </div>

                        <div class="form-group">
                            <label for="description">Descripción</label>
                            <textarea id="description" name="description" rows="4"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;"
                                placeholder="Descripción detallada del producto"><%= locals.oldData ? oldData.description : '' %></textarea>
                            <% if (locals.errors && errors.description) { %>
                                <div class="text-danger">
                                    <%= errors.description.msg %>
                                </div>
                                <% } %>
                        </div>

                        <div class="form-group">
                            <label for="category_id">Categoría</label>
                            <select id="category_id" name="category_id"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;">
                                <option value="" disabled selected>Selecciona una categoría</option>
                                <% categories.forEach(category=> { %>
                                    <option value="<%= category.id %>" <%=locals.oldData &&
                                        oldData.category_id==category.id ? 'selected' : '' %>><%= category.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <% if (locals.errors && errors.category_id) { %>
                                <div class="text-danger">
                                    <%= errors.category_id.msg %>
                                </div>
                                <% } %>
                        </div>

                        <div class="form-group">
                            <label for="brand_id">Marca</label>
                            <select id="brand_id" name="brand_id"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;">
                                <option value="" disabled selected>Selecciona una marca</option>
                                <% brands.forEach(brand=> { %>
                                    <option value="<%= brand.id %>" <%=locals.oldData && oldData.brand_id==brand.id
                                        ? 'selected' : '' %>><%= brand.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <% if (locals.errors && errors.brand_id) { %>
                                <div class="text-danger">
                                    <%= errors.brand_id.msg %>
                                </div>
                                <% } %>
                        </div>

                        <div class="form-group">
                            <label>Colores disponibles:</label>
                            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                <% colors.forEach(color=> { %>
                                    <div>
                                        <input type="checkbox" name="colors" value="<%= color.id %>"
                                            id="color_<%= color.id %>" <%=locals.oldData && oldData.colors &&
                                            (Array.isArray(oldData.colors) ?
                                            oldData.colors.includes(color.id.toString()) : oldData.colors==color.id)
                                            ? 'checked' : '' %>>
                                        <label for="color_<%= color.id %>">
                                            <%= color.name %>
                                        </label>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="price">Precio</label>
                            <input type="number" id="price" name="price" placeholder="0.00" step="0.01"
                                value="<%= locals.oldData ? oldData.price : '' %>">
                        </div>

                        <div class="form-group">
                            <label for="image">Imagen del Producto</label>
                            <input type="file" id="image" name="image" accept="image/*"
                                style="border: none; padding-left: 0;">
                            <% if (locals.errors && errors.image) { %>
                                <div class="text-danger">
                                    <%= errors.image.msg %>
                                </div>
                                <% } %>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Guardar Producto</button>
                    </form>
                </div>
            </main>

            <%- include('../partials/footer') %>
                <script src="/js/validationProduct.js"></script>
    </body>

</html>