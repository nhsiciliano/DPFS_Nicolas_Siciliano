<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { title: 'Crear Producto' , css: 'auth' }) %>

    <body>
        <%- include('../partials/header') %>

            <main class="container auth-container">
                <div class="auth-card" style="max-width: 600px;">
                    <h1>Crear Producto</h1>
                    <p class="auth-subtitle">Agrega un nuevo producto al catálogo</p>

                    <form action="/products" method="POST" class="auth-form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Nombre del Producto</label>
                            <input type="text" id="name" name="name" placeholder="Ej. Alimento Premium" required>
                        </div>

                        <div class="form-group">
                            <label for="description">Descripción</label>
                            <textarea id="description" name="description" rows="4"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;"
                                placeholder="Descripción detallada del producto" required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="category_id">Categoría</label>
                            <select id="category_id" name="category_id"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;"
                                required>
                                <option value="" disabled selected>Selecciona una categoría</option>
                                <% categories.forEach(category=> { %>
                                    <option value="<%= category.id %>">
                                        <%= category.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="brand_id">Marca</label>
                            <select id="brand_id" name="brand_id"
                                style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px;"
                                required>
                                <option value="" disabled selected>Selecciona una marca</option>
                                <% brands.forEach(brand=> { %>
                                    <option value="<%= brand.id %>">
                                        <%= brand.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Colores disponibles:</label>
                            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                <% colors.forEach(color=> { %>
                                    <div>
                                        <input type="checkbox" name="colors" value="<%= color.id %>"
                                            id="color_<%= color.id %>">
                                        <label for="color_<%= color.id %>">
                                            <%= color.name %>
                                        </label>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="price">Precio</label>
                            <input type="number" id="price" name="price" placeholder="0.00" step="0.01" required>
                        </div>

                        <div class="form-group">
                            <label for="image">Imagen del Producto</label>
                            <input type="file" id="image" name="image" accept="image/*" required
                                style="border: none; padding-left: 0;">
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Guardar Producto</button>
                    </form>
                </div>
            </main>

            <%- include('../partials/footer') %>
    </body>

</html>